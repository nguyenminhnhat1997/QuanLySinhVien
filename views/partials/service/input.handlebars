    <section id="portfolio-area">
    	<div class="container-fluid">
    		<div class="row">
    			{{>nav-service}}
                {{>nav-left}}
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 pull-right">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">Nhập thông tin sinh viên</h3>
                        </div>
                        <div class="panel-body">
                            {{#if student}}
                                <div class="alert alert-danger">
                                    <p>Mã {{student.MaSV}} đã tồn tại !</p>
                                </div>
                            {{/if}}
                            {{#if success_msg}}
                                <div class="alert alert-success">
                                    <p>{{success_msg}}</p>
                                </div>
                            {{/if}}
                            <form action="" method="POST" role="form" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="">Mã SV</label>
                                    <input type="text" class="form-control" id="" name="MaSV" placeholder="Mã SV">
                                </div>
                                <div class="form-group">
                                    <label for="">Họ tên</label>
                                    <input type="text" class="form-control" id="" name="HoTen" placeholder="Họ tên">
                                </div>
                                <div class="form-group">
                                    <label for="">Ngày sinh</label>
                                    <input type="date" class="form-control" id="" name="NgaySinh" placeholder="Input field">
                                </div>
                                <div class="form-group">
                                    <label for="">Giới tính &nbsp;</label>
                                    <input type="radio" id="" name="GioiTinh" value="Nam"  >Nam&nbsp;
                                    <input type="radio" id="" name="GioiTinh" value="Nữ" >Nữ
                                </div>
                                <div class="form-group">
                                    <label for="">Địa chỉ</label>
                                    <input type="text" class="form-control" id="" name="DiaChi" placeholder="Địa chỉ">
                                </div>
                                <div class="form-group">
                                    <label for="Khoa">Khóa</label>
                                    <select name="Khoa">
                                      <option value="10">10</option>
                                      <option value="11">11</option>
                                      <option value="12">12</option>
                                      <option value="13">13</option>
                                  </select>
                                  &nbsp;&nbsp;
                                  <label for="Khoa">Mã Lớp</label>
                                  <select name="MaLop">
                                      <option value="AT">AT</option>
                                      <option value="PN">PN</option>
                                      <option value="KT">KT</option>
                                  </select>
                              </div>
                              <div class="form-group">
                                <label for="">Ảnh đại diện</label>
                                <input type="file" class="form-control" id="" name="img_upload">
                            </div>      
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>